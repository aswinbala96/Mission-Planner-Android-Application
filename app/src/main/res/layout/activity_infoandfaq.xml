<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#D9D9D9"
    android:background="#D9D9D9">

    <LinearLayout
        android:id="@+id/miss_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#D9D9D9"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="INFO AND"
            android:textColor="#FF0000"
            android:textSize="38sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=" FAQ"
            android:textColor="#404040"
            android:textSize="38sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:id="@+id/miss_line"
        android:layout_width="match_parent"
        android:layout_height="5sp"
        android:layout_below="@id/miss_txt"
        android:layout_marginLeft="7sp"
        android:layout_marginRight="7sp"
        android:layout_marginBottom="11sp"
        android:background="#7B7B7D"></View>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/menu_line"
        android:layout_below="@id/miss_line"
        android:background="#D9D9D9">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:background="#D9D9D9"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#D9D9D9"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/facility_sop"
                    android:layout_width="0sp"
                    android:layout_height="150sp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:onClick="facilitySOP"
                    android:src="@drawable/sop" />

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="60sp"
                    android:text="ABOUT"
                    android:textColor="#404040"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#D9D9D9"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/bridge_sop"
                    android:layout_width="0sp"
                    android:layout_height="150sp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:onClick="bridgeSOP"
                    android:src="@drawable/sop" />

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="60sp"
                    android:text="FREQUENTYL ASKED QUESTIONS (FAQ)"
                    android:textColor="#404040"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#D9D9D9"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/mp_sop"
                    android:layout_width="0sp"
                    android:layout_height="150sp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:onClick="mpSOP"
                    android:src="@drawable/sop" />

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="60sp"
                    android:text="STANDARD OPERATING PROCEDURES (SOP)"
                    android:textColor="#404040"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/menu_line"
        android:layout_width="match_parent"
        android:layout_height="5sp"
        android:layout_above="@id/menu_txt"
        android:layout_marginLeft="7sp"
        android:layout_marginRight="7sp"
        android:layout_marginBottom="11sp"
        android:background="#7B7B7D"></View>

    <LinearLayout
        android:id="@+id/menu_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="7sp"
        android:layout_marginRight="7sp"
        android:background="#D9D9D9"
        android:orientation="horizontal"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#D9D9D9"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <ImageButton
                android:id="@+id/mission_type"
                android:layout_width="wrap_content"
                android:layout_height="70sp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:onClick="missionType"
                android:src="@drawable/mission_type_g" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#D9D9D9"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <ImageButton
                android:id="@+id/saved_missions"
                android:layout_width="wrap_content"
                android:layout_height="70sp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:onClick="savedMission"
                android:src="@drawable/saved_missions_g" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#D9D9D9"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <ImageButton
                android:id="@+id/cameras"
                android:layout_width="wrap_content"
                android:layout_height="70sp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:onClick="cameras"
                android:src="@drawable/cameras_g" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#D9D9D9"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <ImageButton
                android:id="@+id/calculators"
                android:layout_width="wrap_content"
                android:layout_height="70sp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:onClick="calculators"

                android:src="@drawable/calci_g" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#D9D9D9"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <ImageButton
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="70sp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/info_g" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="INFO"
                android:textColor="#404040"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>

